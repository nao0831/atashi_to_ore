<%= form_for(@achieve) do |f| %>

<% if @achieve.errors.any? %>
<ul>
<% @achieve.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>

<% end %>

<div class="field">
	<%= f.label :title %>
	<%= f.text_field :title %>
</div>

<div class="field">
	<%= f.label :content %>
	<%= f.text_area :content %>
</div>

<div class="actions">
	<%= f.submit %>
</div>

<% end %>