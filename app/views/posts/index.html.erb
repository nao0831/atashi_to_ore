
<%= link_to image_tag("logo2.png"), "/" %>


<div id="notice"><%= notice %></div>


<h1>一覧</h1>
<table class="table table-striped table-hover">
	
	<!--<thead>
    	<tr>
      	<th>あおあお</th>
      	<th>うおおお</th>
    	</tr>
  	</thead>
  -->
	<tbody>

		<% @posts.each do |post| %>
		<tr>
		<td><%= link_to post.title, post_path(post) %></td>
		<td><%= post.created_at.strftime('%Y/%m/%d') %></td>

		<!--　ログインしてる時だけ表示 -->
		<% if current_user != nil %>
		<td><%= link_to "Edit", edit_post_path(post) %></td>
		<td><%= link_to "Delete", post, :confirm => "削除しますよー",
							:method => :delete %></td>
		<% end %>

<% end %>
</tr>
</tbody>
</table>

<%= link_to "一覧", posts_path %> 
<!--　ログインしてる時だけ表示 -->
<% if current_user != nil %>
<%= link_to "New", new_post_path %>
<% end %>
<!-- サイドバーの内容を定義 -->
<% content_for :sidebar do %>
<ul class="unstyled">
<h2>最近の投稿</h2>
<% @posts.each do |post| %>
	<li>
		<%= link_to post.title, post_path(post) %>
		<span class="pull-right"><td><%= post.created_at.strftime('%Y/%m/%d') %></span>
	</li>
<% end %>
</ul>

<% end %>

<!-- noticeメッセージを時間がたったら消えるようにjQueryで指定 -->
<script>
$(function(){
	setTimeout(function(){
		$("#notice").fadeOut("slow");
	}, 800);
});
</script>