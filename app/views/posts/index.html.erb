
<%= link_to image_tag("logo2.png"), "/" %>


<div id="notice"><%= notice %></div>
<div class="notice"><%= notice %></div>


<h1>一覧</h1>
<ul>
<% @posts.each do |post| %>
<li>
<%= link_to post.title, post_path(post) %>
<%= link_to "Edit", edit_post_path(post) %>
<%= link_to "Delete", post, :confirm => "Sure?",
							:method => :delete %>
</li>
<% end %>
</ul>

<%= link_to "一覧", posts_path %> | <%= link_to "New", new_post_path %>

<!-- noticeメッセージを時間がたったら消えるようにjQueryで指定 -->
<script>
$(function(){
	setTimeout(function(){
		$("#notice").fadeOut("slow")
		$(".notice").fadeOut("slow")
	}, 80);
});
</script>